<center>
<h1>Hi, <%= @current_user.username %>!</h1>

<form action="/entries/new" method="get">
	<input type="submit" value="Create new post">
</form>

<div class='miniuser-list'>
	<% @entries.each do |entry| %>
		<div class='miniuser'>
			<p class='username'>
				<a href="/entries/<%= entry.id %>"><b><%= entry.title.upcase %></b></a>
				<br>
				<%= entry.post %>
				<br>
				<%= entry.date_posted %>
				<br>
			</p>
		</div>
	<% end %>
</div>
</center>