<div class='miniuser-list'>

<form action="/entries/new" method="get">
	<input type="submit" value="Create a new post">
</form>

	<center>
	<% @entries.each do |entry| %>
		<div class='miniuser'>
			<p class='username'>
				<a href="/entries/<%= entry.id %>"><%= entry.title.upcase %></a>
				<br>
				<%= entry.post %>
				<br>
				<%= entry.date_posted %>
				<br>
			</p>
		</div>
	<% end %>
</center>
</div>