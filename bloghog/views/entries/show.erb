<center>
	<h2><b><%= @entry.title %></b></h2>
		<div class="entrypost">
			<h5>#<%= @entry.tags.join(", #")%></h5>
			<h5>POSTED: <%= @entry.post %></h5>
				<div>
					<a href="/entries/<%= @entry.id %>/edit">EDIT THIS POST</a>
