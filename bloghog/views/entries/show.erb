						<br>
					<form action="/entries/<%= @entry.id %>" method="post">
						<input type="hidden" name="_method" value="delete" />
							<div class="myButton">
						<input type="submit" value="DELETE THIS POST">		
							</div>
					</form>
				</div>	
		</div>			
</center>